{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Publish to PyPI",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/publish.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/publish.sh"
            },
            "windows": {
                "command": ".vscode/tasks/windows/publish.bat"
            },
            "problemMatcher": []
        },
        {
            "label": "Publish to PyPI [TEST]",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/publish_test.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/publish_test.sh"
            },
            "windows": {
                "command": ".vscode/tasks/windows/publish_test.bat"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dev Dependencies",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/dev_install.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/dev_install.sh"
            },
            "windows": {
                "command": ".vscode/tasks/windows/dev_install.bat"
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/build.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/build.sh"
            },
            "windows": {
                "command": ".vscode/tasks/windows/build.bat"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Docker - Full Clean",
            "type": "shell",
            "command": "docker system prune --all --force --volumes",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build Linux Builder Only",
            "type": "shell",
            "command": "docker build --target builder -t blenderpy/builder -f ./.containers/Docker/Linux/Dockerfile .",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build CentOS",
            "type": "shell",
            "command": "docker build --target blenderpy-centos -t blenderpy/centos -f ./.containers/Docker/Linux/Dockerfile .",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build Debian",
            "type": "shell",
            "command": "docker build --target blenderpy-debian -t blenderpy/debian -f ./.containers/Docker/Linux/Dockerfile .",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build Fedora",
            "type": "shell",
            "command": "docker build --target blenderpy-fedora -t blenderpy/fedora -f ./.containers/Docker/Linux/Dockerfile .",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build Ubuntu",
            "type": "shell",
            "command": "docker build --target blenderpy-ubuntu -t blenderpy/ubuntu -f ./.containers/Docker/Linux/Dockerfile .",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build Linux Non-Builders",
            "type": "shell",
            "dependsOn":[
                "Docker - Build CentOS",
                "Docker - Build Debian",
                "Docker - Build Fedora",
                "Docker - Build Ubuntu"
            ]
        },
        {
            "label": "Docker - Build Windows",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/docker_build_windows.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/docker_build_windows.sh"
            },
            "windows": {
                "command": "docker build --target blenderpy-windows -t blenderpy/windows -f ./.containers/Docker/Windows/Dockerfile ."
            },
            "problemMatcher": []
        },
        {
            "label": "Docker - Build All Linux",
            "type": "shell",
            "dependsOn":[
                "Docker - Build Linux Builder Only",
                "Docker - Build Linux Non-Builders"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build All Windows",
            "type": "shell",
            "dependsOn": [
                "Docker - Build Windows"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker - Build All",
            "type": "shell",
            "dependsOn": [
                "Docker - Build All Linux",
                "Docker - Build All Windows"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker - Delete All Containers & Volumes",
            "type": "shell",
            "command": "docker rm -vf $(docker ps -a -q)",
            "problemMatcher": []
        },
        {
            "label": "Docker - Delete All Images",
            "type": "shell",
            "command": "docker rmi -f $(docker images -a -q)",
            "problemMatcher": []
        },
        {
            "label": "Docker - Delete EVERYTHING",
            "type": "shell",
            "dependsOn": [
                "Docker - Delete All Containers & Volumes",
                "Docker - Delete All Images"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}