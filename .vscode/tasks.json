{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Publish to PyPI",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/publish.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/publish.sh"
            },
            "windows": {
                "command": ".vscode/tasks/windows/publish.bat"
            },
            "problemMatcher": []
        },
        {
            "label": "Publish to PyPI [TEST]",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/publish_test.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/publish_test.sh"
            },
            "windows": {
                "command": ".vscode/tasks/windows/publish_test.bat"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dev Dependencies",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/dev_install.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/dev_install.sh"
            },
            "windows": {
                "command": ".vscode/tasks/windows/dev_install.bat"
            },
            "problemMatcher": []
        },
        {
            "label": "Build All",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/build_all.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/build_all.sh"
            },
            "windows": {
                "command": ".vscode/tasks/windows/build_all.bat"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Normal",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/build_normal.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/build_normal.sh"
            },
            "windows": {
                "command": ".vscode/tasks/windows/build_normal.bat"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build CUDA",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/build_cuda.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/build_cuda.sh"
            },
            "windows": {
                "command": ".vscode/tasks/windows/build_cuda.bat"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Optix",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/build_optix.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/build_optix.sh"
            },
            "windows": {
                "command": ".vscode/tasks/windows/build_optix.bat"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Docker - Full Clean",
            "type": "shell",
            "command": "docker system prune --all --force --volumes",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build Builder Only",
            "type": "shell",
            "command": "docker build --target builder -t blenderpy/builder .",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build Debian",
            "type": "shell",
            "command": "docker build --target blenderpy-debian -t blenderpy/debian .",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build Fedora",
            "type": "shell",
            "command": "docker build --target blenderpy-fedora -t blenderpy/fedora .",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build CentOS",
            "type": "shell",
            "command": "docker build --target blenderpy-centos -t blenderpy/manylinux .",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build Ubuntu",
            "type": "shell",
            "command": "docker build --target blenderpy-ubuntu -t blenderpy/ubuntu .",
            "problemMatcher": []
        },
        {
            "label": "Docker - Build Windows",
            "type": "shell",
            "linux": {
                "command": ".vscode/tasks/unix/docker_build_windows.sh"
            },
            "osx": {
                "command": ".vscode/tasks/unix/docker_build_windows.sh"
            },
            "windows": {
                "command": "docker build --target blenderpy-windows -t blenderpy/windows ."
            },
            "problemMatcher": []
        },
        {
            "label": "Docker - Build All Linux",
            "type": "shell",
            "dependsOn": [
                "Docker - Build Debian",
                "Docker - Build Fedora",
                "Docker - Build Manylinux",
                "Docker - Build Ubuntu"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker - Build All Windows",
            "type": "shell",
            "dependsOn": [
                "Docker - Build Windows",
                "Docker - Build Windows Manual"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker - Build All",
            "type": "shell",
            "dependsOn": [
                "Docker - Build All Linux",
                "Docker - Build All Windows"
            ],
            "problemMatcher": []
        },
        {
            "label": "Docker - Delete All Containers & Volumes",
            "type": "shell",
            "command": "docker rm -vf $(docker ps -a -q)"
        },
        {
            "label": "Docker - Delete All Images",
            "type": "shell",
            "command": "docker rmi -f $(docker images -a -q)",
            "problemMatcher": []
        },
        {
            "label": "Docker - Delete EVERYTHING",
            "type": "shell",
            "dependsOn": [
                "Docker - Delete All Containers & Volumes",
                "Docker - Delete All Images"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}