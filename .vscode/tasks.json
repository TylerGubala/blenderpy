    "version": "2.0.0",
    "tasks": [
        {
            "label": "Publish to PyPI",
            "type": "shell",
            "command": ".vscode/tasks/windows/publish.bat",
            "problemMatcher": []
        },
        {
            "label": "Install Dev Dependencies",
            "type": "shell",
            "command": ".vscode/tasks/windows/dev_install.bat",
            "problemMatcher": []
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": ".vscode/tasks/windows/build_all.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Normal",
            "type": "shell",
            "command": ".vscode/tasks/windows/build_normal.bat",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build CUDA",
            "type": "shell",
            "command": ".vscode/tasks/windows/build_cuda.bat",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Optix",
            "type": "shell",
            "command": ".vscode/tasks/windows/build_optix.bat",
            "group": "build",
            "problemMatcher": []
        }
    ]
